<% layout('/layouts/boilerplate.ejs') -%>

    <body>
        <div class="row">
            <div class="col offset-md-2">

                <h3 class="mb-4 mt-4">Edit your Listing</h3>
                <form method="POST" action="/listings/<%= info._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">


                    <div class="mb-3 col-md-10">
                        <label for="title" class="form-label fw-semibold">Title</label>
                        <input name="listing[title]" value="<%= info.title %>" type="text" class="form-control" required>
                        <div class="invalid-feedback">
                            Enter a catchy title
                          </div>
                    </div>

                    <div class="mb-3 col-md-10">
                        <label for="description" class="form-label fw-semibold">Description</label>
                        <textarea name="listing[description]" class="form-control" required><%= info.description %></textarea>
                        <div class="invalid-feedback">
                            Please add a short description
                          </div>
                    </div>

                    <div class="mb-3 col-md-10">
                        <b>Original Listing Image</b>
                        <br>
                        <img src="<%= previewImage %>">
                    </div>
                    
                    <div class="mb-3 col-md-10">
                        <label for="image" class="form-label fw-semibold">Image Link</label>
                        <input name="listing[image]" type="file" class="form-control">
                    </div>

                    <div class="row col-md-10">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label fw-semibold">Price</label>
                            <input name="listing[price]" value="<%= info.price %>" type="number" class="form-control" required>
                            <div class="invalid-feedback">
                                Please enter valid price
                              </div>
                        </div>
                        
                        <div class="mb-3 col-md-8">
                
                            <label for="country" class="form-label fw-semibold">Country</label>
                            <input name="listing[country]" value="<%= info.country %>" type="text" class="form-control" required>
                            <div class="invalid-feedback">
                                Please enter a valid country
                              </div>    
                        </div>
                    </div>
                
                    <div class="mb-3 col-md-10">
                        <label for="location" class="form-label fw-semibold">Location</label>
                        <input name="listing[location]" value="<%= info.location %>" type="text" class="form-control" required>
                        <div class="invalid-feedback">
                            Please enter a valid location
                          </div>
                    </div>
            
                    
                    <button class="btn bg-dark">Edit this Listing</button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>